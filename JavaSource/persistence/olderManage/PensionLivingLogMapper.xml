<!-- 按照老人ID查询老人的入住信息 add by mary 2013-9-14 -->  
  <select id="selectLivingLogInfo" parameterType="java.lang.Long" resultMap="BaseResultMapExtend">

SELECT log.* ,
purse1.id as bedItemPurseId,
purse2.id as nurseItemPurseId,
purse1.itemName as bedItemPurseName,
purse2.itemName as nurseItemPurseName,
bed.`level` AS bed_level,
nurse.`level` AS nurse_level,
purse1.purse AS bed_purse,
purse2.purse AS nurse_purse
FROM pension_living_log log LEFT JOIN pension_dic_bedtype bed ON bed.id = log.bed_Type_id 
LEFT JOIN pension_dic_nurse nurse ON nurse.id = log.nurse_level_id
LEFT JOIN pension_itempurse purse1 ON bed.purse_id = purse1.id 
LEFT JOIN pension_itempurse purse2 ON nurse.purseId = purse2.id
WHERE log.older_id = #{olderId,jdbcType=DECIMAL}
ORDER BY log.update_time
  </select>
