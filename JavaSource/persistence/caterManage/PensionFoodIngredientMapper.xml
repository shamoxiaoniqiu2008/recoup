	<!-- 菜品成本统计查询汇总 add by justin.su 2013-09-09 -->
	<select id="selectCostAnalysisRecord" resultType="controller.caterManage.ExtendForCostAnalysis">
		SELECT
		po.foodmenu_id AS foodMenuId
		,pfi.name AS greensName
		,pfi.qty_unit AS
		qtyUnit,
		if(ps.storage_qty is null,0,ps.storage_qty) as storageQty,
		SUM(pfi.ingredient_qty) AS greensQty,
		case
		when ps.storage_qty IS NULL
		then SUM(pfi.ingredient_qty)
		when ps.storage_qty IS not NULL
		then
		IF(SUM(pfi.ingredient_qty) - (if(ps.storage_qty is
		null,0,ps.storage_qty))> 0,SUM(pfi.ingredient_qty) -
		ps.`storage_qty`,0) end
		AS purchaseQty
		,pic.price AS price
		FROM
		pension_order po,
		pension_food_ingredient pfi
		LEFT JOIN
		pension_storage ps
		ON
		pfi.`item_id`= ps.`item_id`
		and
		pfi.qty_unit=ps.unit,
		pension_item_catalog pic
		where
		po.foodmenu_id =pfi.menu_id
		and pfi.item_id = pic.id
		group by
		po.foodmenu_id
		,pfi.name
		,pfi.qty_unit
		,ps.`storage_qty`
		,pic.price
	</select>
	<!-- 菜品成本统计查询汇总(根据条件) add by justin.su 2013-09-09 -->
	<select id="selectCostAnalysisRecordByCondition" parameterType="map"
		resultType="controller.caterManage.ExtendForCostAnalysis">
		SELECT
		po.foodmenu_id AS foodMenuId
		,pfi.name AS greensName
		,SUM(pfi.ingredient_qty) AS greensQty
		,pfi.qty_unit AS qtyUnit
		,if(ps.storage_qty is null,0,ps.storage_qty) as storageQty,
		case
		when
		ps.storage_qty IS NULL
		then SUM(pfi.ingredient_qty)
		when ps.storage_qty
		IS not NULL
		then
		IF(SUM(pfi.ingredient_qty) - (if(ps.storage_qty is
		null,0,ps.storage_qty))> 0,SUM(pfi.ingredient_qty) -
		ps.`storage_qty`,0) end
		AS purchaseQty
		,pic.price AS price
		FROM
		pension_order po
		INNER JOIN
		pension_food_ingredient pfi
		ON
		po.foodmenu_id = pfi.menu_id
		LEFT JOIN
		pension_storage ps
		ON
		pfi.`item_id` = ps.`item_id`
		and pfi.qty_unit=ps.unit
		,pension_item_catalog pic
		WHERE
		pfi.item_id = pic.id
		<if test="menuId != null">
			and po.foodmenu_id = #{menuId}
		</if>
		<if test="startDate != null">
			and unix_timestamp(po.eatTime)&gt;=
			unix_timestamp(#{startDate})
		</if>
		<if test="endDate != null">
			and (DATE_FORMAT(DATE_SUB(po.eatTime,INTERVAL 8 DAY),
			'%Y-%m-%d') &lt;
			#{endDate} or
			DATE_FORMAT(DATE_SUB(po.eatTime,INTERVAL 8 DAY),
			'%Y-%m-%d') =
			#{endDate})
		</if>
		group by
		po.foodmenu_id
		,pfi.name
		,pfi.qty_unit
		,ps.`storage_qty`
		,pic.price
	</select>
